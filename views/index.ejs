<%- include ("partials/header") %>
<div class="ui main text container row centered grid" style="margin-top: 7.0rem;">
  <div class="ui huge header">These are the Blogs</div>
  <div class="ui top attached segment">
    <div class="ui divided items row four grid">
      <% blogs.forEach(function(blog){ %>
      <div class="item">
        <div class="image">
          <img
            src="<%= blog.image %>"
            alt="image"
          />
        </div>
        <div class="content">
          <a class="header" href="/blogs/<%=blog._id%>"></a>
        </div>
        <div class="meta">
          <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
          <p><%- blog.body.substring(0, 100) %></p>
        </div>
        <div class="extra">
          <a class="ui floated basic violer button" href="/blogs/<%=blog._id%>">
            Read More
            <i class="right chevron icon"></i>
          </a>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<%- include ("partials/footer") %>
